<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    tools:context=".pas_de_vol">

    <TextView
        android:id="@+id/Oops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Ooops..."
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ic_liste_vide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_back"
        android:id="@+id/back"
        android:onClick="back_profil_etd"
        tools:ignore="MissingConstraints"></ImageView>

    <TextView
        android:id="@+id/en_tete_liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="Liste des volontaires"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"></TextView>

    <ImageView
        android:id="@+id/ic_liste_vide"
        android:layout_width="175dp"
        android:layout_height="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/en_tete_liste"
        app:srcCompat="@drawable/empty_list"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/liste_vide"
        android:layout_width="323dp"
        android:layout_height="102dp"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="Pas de volontaires pour ce module!!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_liste_vide"
        app:layout_constraintVertical_bias="0.025"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>